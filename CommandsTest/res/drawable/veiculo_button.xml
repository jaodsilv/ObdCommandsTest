<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="@integer/fade_duration">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="@color/total_black" />
            <solid android:color="@color/custom_orange" />
            <size android:width="@dimen/button_width" android:height="@dimen/button_height" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="@color/total_black" />
            <solid android:color="@color/custom_orange" />
            <size android:width="@dimen/button_width" android:height="@dimen/button_height" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="@color/total_black" />
            <solid android:color="@color/custom_orange" />
            <size android:width="@dimen/button_width" android:height="@dimen/button_height" />
        </shape>
    </item>
</selector>